<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liuuki.crm.workbench.dao.ClueDao">
    <insert id="saveClue">
        insert into tbl_clue(
            id,fullname,appellation,owner,company,job,email,phone,website,mphone,state,source,createBy,createTime,description,contactSummary,
            nextContactTime,address
        )
        values (
           #{id},#{fullname},#{appellation},#{owner},#{company},#{job},#{email},#{phone},
           #{website},#{mphone},#{state},#{source},#{createBy},#{createTime},#{description},#{contactSummary},#{nextContactTime},#{address}
        )
    </insert>

    <select id="getTotalPages" resultType="int">
        select count(*)
        from tbl_clue as c
        join tbl_user as u
        on c.owner=u.id
        <where>
            <if test="fullname!=null and fullname!=''">
                c.name like '%' #{funllname} '%'
            </if>
            <if test="owner!=null and owner!=''">
                u.name like '%' #{owner} '%'
            </if>
            <if test="company!=null and company!=''">
                c.company like '%'#{company} '%'
            </if>
            <if test="phone!=null and phone!=''">
                c.phone like '%'#{phone} '%'
            </if>
            <if test="mphone!=null and mphone!=''">
                c.mphone like '%' #{mphone} '%'
            </if>
            <if test="source!=null and source!=''">
                c.source like '%' #{source} '%'
            </if>
            <if test="state!=null and state!=''">
                c.state like '%' #{state} '%'
            </if>
        </where>
    </select>

    <select id="selectByCondition" resultType="com.liuuki.crm.workbench.domain.Clue">
        select
            c.id,
            c.fullname,
            u.name as owner,
            c.company,
            c.phone,
            c.mphone,
            c.source,
            c.state
        from tbl_clue as c
        join tbl_user as u
        on c.owner=u.id
        <where>
            <if test="fullname!=null and fullname!=''">
                c.name like '%' #{funllname} '%'
            </if>
            <if test="owner!=null and owner!=''">
                and u.name like '%' #{owner} '%'
            </if>
            <if test="company!=null and company!=''">
                and c.company like '%'#{company} '%'
            </if>
            <if test="phone!=null and phone!=''">
                and c.phone like '%'#{phone} '%'
            </if>
            <if test="mphone!=null and mphone!=''">
                and c.mphone like '%' #{mphone} '%'
            </if>
            <if test="source!=null and source!=''">
                and c.source like '%' #{source} '%'
            </if>
            <if test="state!=null and state!=''">
                and c.state like '%' #{state} '%'
            </if>
        </where>
        order by c.createTime desc
        limit #{pageStart},#{pageEnd}
    </select>

    <select id="getClueById" resultType="com.liuuki.crm.workbench.domain.Clue">
        select * from tbl_clue where id=#{id}
    </select>

    <delete id="deleteClueById">
        delete from tbl_clue where id=#{id}
    </delete>

</mapper>